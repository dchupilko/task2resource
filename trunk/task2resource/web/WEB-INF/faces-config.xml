<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
		<application>
		<locale-config>
			<default-locale>en_US</default-locale>
		</locale-config>
	</application>
    <validator>
        <validator-id>dateRangeValidator</validator-id>
        <validator-class>com.icesoft.icefaces.tutorial.component.selectinputdate.DateRangeValidator</validator-class>
    </validator>
	<managed-bean>
		<description> Backing bean for dateSelect example.</description>
		<managed-bean-name>dateSelect</managed-bean-name>
		<managed-bean-class>
			UIDatepicker.SelectInputDateBean 
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
</faces-config>
